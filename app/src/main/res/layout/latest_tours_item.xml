<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:background="@drawable/background_bg"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/booking_image"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:elevation="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/grassland"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="12dp" />

    <TextView
        android:id="@+id/tourtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:text="Forest"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/booking_image"
        app:layout_constraintTop_toBottomOf="@+id/booking_image" />

    <TextView
        android:id="@+id/LatestToursPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_bg"
        android:backgroundTint="@color/black"
        android:padding="5dp"
        android:text="Rs.4500"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/booking_image"
        app:layout_constraintTop_toBottomOf="@+id/booking_image" />





